@model List<YOGBIS.Common.VModels.AdayMYSSVM>
@{
    ViewData["Title"] = "Aday Takip";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style type="text/css">
    #blink {
        font-size: 14px;
        font-weight: bold;
    }
    .aday-link {
        color: #007bff;
        font-weight: bold;
        cursor: pointer;
    }
    .komisyon-badge {
        background-color: darkorange;
        font-weight: bold;
        font-size: 15px;
        height: 25px;
        display: inline-block;
        padding: 3px 10px;
    }
</style>

<div class="row">
    <div class="col-md-12">
        <ol class="breadcrumb m-o">
            <li class="m-0">
                <a asp-controller="AdayTakip" asp-action="Index"><i class="fas fa-sync-alt text-success" title="Sayfayı yenile"></i></a>
            </li>
            <li class="ml-3 mt-1 mr-1 pull-right">
                <h4 class="pull-right text-danger small">ADAY LİSTESİ - @DateTime.Now.ToShortDateString()</h4>
            </li>
        </ol>
    </div>
</div>
<div class="row">
        <div class="col-md-12">
            @if (TempData["WarningMessage"] != null)
            {
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-triangle mr-2"></i>
                    @TempData["WarningMessage"]
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-circle mr-2"></i>
                    @TempData["ErrorMessage"]
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }
            @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
            {
                <div class="alert alert-warning" role="alert">
                    @ViewBag.ErrorMessage
                </div>
            }
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="adaylarTable" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                            <thead>
                                <tr>
                                    <th class="text-center">Ad Soyad</th>
                                    <th class="text-center">Komisyon</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Any())
                                {
                                    foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                <a href="#" class="text-primarry text-lg-right font-weight-bold aday-link" data-aday-id="@item.AdayId">
                                                    @item.AdayAdiSoyadi
                                                </a>
                                            </td>
                                            <td class="p-1 text-center align-middle">
                                                <div class="d-flex justify-content-center align-items-center h-100">
                                                    <span class="badge badge-primary px-3 py-2 w-100" style="font-size:medium">@item.MYSSKomisyonAdi</span>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="2" class="text-center">
                                            <div class="alert alert-info mb-0">
                                                <i class="fas fa-info-circle mr-2"></i>
                                                Görüntülenecek kayıt bulunamadı.
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

<!-- İletişim Bilgileri Modal -->
<div class="modal fade" id="iletisimBilgileriModal" tabindex="-1" role="dialog" aria-labelledby="iletisimBilgileriModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-primary">
                <h5 class="modal-title text-white" id="iletisimBilgileriModalLabel">Aday İletişim Bilgileri</h5>
                <button type="button" class="close text-white" data-dismiss="modal" aria-label="Kapat">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div id="iletisimBilgileri"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">
                    <i class="fas fa-times mr-2"></i>Kapat
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {

            // Aday linkine tıklandığında
            $('#adaylarTable').on('click', '.aday-link', function (e) {
                e.preventDefault();
                var adayId = $(this).data('aday-id');
                var adayAdi = $(this).text().trim();
                alert(adayId);
                // Modal başlığını güncelle
                $('#iletisimBilgileriModalLabel').text(adayAdi + ' - İletişim Bilgileri');

                // AJAX isteği
                $.ajax({
                    url: '@Url.Action("AdayIletisimBilgileriGetir", "AdayTakip")',
                    type: 'GET',
                    data: { adayId: adayId },
                    success: function (result) {
                        if (result.isSuccess) {
                            var html = '<p><strong>Telefon:</strong> ' + result.data.cepTelNo + '</p>';
                            if (result.data.ePosta) {
                                html += '<p><strong>E-Posta:</strong> ' + result.data.ePosta + '</p>';
                            }
                            $('#iletisimBilgileri').html(html);
                            $('#iletisimBilgileriModal').modal('show');
                        } else {
                            toastr.warning(result.message || 'İletişim bilgileri alınamadı');
                        }
                    },
                    error: function () {
                        toastr.error('İletişim bilgileri alınırken bir hata oluştu');
                    }
                });
            });
        });
    </script>
}
