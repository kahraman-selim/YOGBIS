@model YOGBIS.Common.VModels.MulakatSorulariVM
@{
    ViewData["Title"] = "Mülakat Soruları";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles {
    <link rel="stylesheet" href="//cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/css/alertify.min.css" />
}

<div class="row">
    <div class="col-md-12 mb-1">
        <div class="card shadow-lg rounded-lg">
            <div class="card-header">
                <i class="fas fa-table mr-1"></i>
                <b>Mülakat Soruları Güncelleme</b>
            </div>
            <div class="card-body">
                <div class="form-row mb-2">
                    <div class="col-12">
                        <form class="form-group m-0" asp-action="MulakatSoruEkle">
                            @Html.HiddenFor(x => x.MulakatSorulariId)
                            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                            <div class="form-row">
                                <!--SoruSıraNo-->
                                <div class="col-md-1">
                                    <div class="form-group">
                                        <label asp-for="SoruSiraNo" class="small mb-1 font-weight-bold">Soru Sıra No</label>
                                        <input asp-for="SoruSiraNo" type="number" class="form-control py-2" id="SoruSiraNo">
                                        <span class="text-danger" asp-validation-for="SoruSiraNo"></span>
                                    </div>
                                </div>
                                <!--SoruNo-->
                                <div class="col-md-1">
                                    <div class="form-group">
                                        <label asp-for="SoruNo" class="small mb-1 font-weight-bold">Soru No</label>
                                        <input asp-for="SoruNo" type="number" class="form-control py-2" id="SoruNo">
                                        <span class="text-danger" asp-validation-for="SoruNo"></span>
                                    </div>
                                </div>
                                <!--SoruDerece-->
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label asp-for="DereceId" class="small mb-1 font-weight-bold">Dereceyi Seç</label>
                                        @Html.DropDownListFor(u => u.DereceId, new SelectList(ViewBag.Dereceler,
                                                 "DereceId", "DereceAdi"), "Dereceyi seçiniz", new { @id = "DereceListesi", @class = "form-control-range form-control p-0" })
                                        <span class="text-danger" asp-validation-for="DereceId"></span>
                                    </div>
                                </div>
                                <!--Mülakat-->
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label asp-for="MulakatId" class="small mb-1 font-weight-bold">Mülakatı Seç</label>
                                        @Html.DropDownListFor(m => m.MulakatId, new SelectList(ViewBag.Mulakatlar,
                                                 "MulakatId", "MulakatAdi"), "Mülakatı Seç", new { @id = "MulakatListesi", @class = "form-control-range form-control p-0" })
                                        <span class="text-danger" asp-validation-for="MulakatId"></span>
                                    </div>
                                </div>
                                <!--SoruKategori-->
                                <div class="col-md-2">
                                    <div class="form-group">
                                        <label asp-for="SoruKategorilerId" class="small mb-1 font-weight-bold">Soru Kategori Seç</label>
                                        @Html.DropDownListFor(k => k.SoruKategorilerId, new SelectList(ViewBag.SoruKategorileri,
                                                 "SoruKategorilerId", "SoruKategorilerAdi"), "Kategoriyi Seç", new { @id = "KategoriListesi", @class = "form-control-range form-control p-0" })
                                        <span class="text-danger" asp-validation-for="SoruKategorilerId"></span>
                                    </div>
                                </div>
                                <!--Soruİptal-->
                                <div class="col-md-2">
                                    <div class="form-group">
                                        <div class="form-group">
                                            <label asp-for="Iptal" class="small mb-1 font-weight-bold">Sorulabilir</label>
                                            <select asp-for="Iptal" class="form-control-range form-control py-0" aria-label="Default select example" id="soruIptal">
                                                <option asp-for="Iptal" selected class="text-left">Seçim Yapınız</option>
                                                <option asp-for="Iptal" value="true">Evet</option>
                                                <option asp-for="Iptal" value="false">Hayır</option>
                                            </select>
                                            <span class="text-danger" asp-validation-for="Iptal"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!--KategoriSiraNo-->
                            <div class="form-row" style="display:none">
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label asp-for="SoruKategoriSiraNo" class="small mb-1 font-weight-bold">Kategori Sıra No</label>
                                        <input asp-for="SoruKategoriSiraNo" type="number" class="form-control py-2" id="SoruKategoriSiraNo" placeholder="Kategori Sıra Numarası">
                                        <span class="text-danger" asp-validation-for="SoruKategoriSiraNo"></span>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label asp-for="SoruKategoriAdi" class="small mb-1 font-weight-bold">Soru Kategori Adı</label>
                                        <input asp-for="SoruKategoriAdi" type="text" class="form-control py-2" id="SoruKategoriAdi" placeholder="Kategori Adı Giriniz">
                                        <span class="text-danger" asp-validation-for="SoruKategoriAdi"></span>
                                    </div>
                                </div><!--KategoriAdi-->
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label asp-for="SinavKategoriTurAdi" class="small mb-1 font-weight-bold">Sınav Kategori Tür Adı</label>
                                        <input asp-for="SinavKategoriTurAdi" type="text" class="form-control py-2" id="SinavKategoriTurAdi" placeholder="Sınav Kategori Tür Adını Giriniz">
                                        <span class="text-danger" asp-validation-for="SinavKategoriTurAdi"></span>
                                    </div>
                                </div><!--SınavKategoriTurAdi-->
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label asp-for="SinavKateogoriTurId" class="small mb-1 font-weight-bold">Sınav Kategori Tür No</label>
                                        <input asp-for="SinavKateogoriTurId" type="number" class="form-control py-2" id="SinavKateogoriTurId" placeholder="Sınav Kategori Tür No Giriniz">
                                        <span class="text-danger" asp-validation-for="SinavKateogoriTurId"></span>
                                    </div>
                                </div><!--SinavKateogoriTurId-->
                            </div>
                            <div class="form-row" style="display:none">
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label asp-for="SoruSiraNo" class="small mb-1 font-weight-bold">Soru Sıra Numarası</label>
                                        <input asp-for="SoruSiraNo" type="number" class="form-control py-2" id="SoruSiraNo" placeholder="Soru Sıra No Giriniz">
                                        <span class="text-danger" asp-validation-for="SoruSiraNo"></span>
                                    </div>
                                </div><!--SoruSiraNo-->
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label asp-for="SoruNo" class="small mb-1 font-weight-bold">Soru Numarası</label>
                                        <input asp-for="SoruNo" type="number" class="form-control py-2" id="SoruNo" placeholder="Soru No Giriniz">
                                        <span class="text-danger" asp-validation-for="SoruNo"></span>
                                    </div>
                                </div><!--SoruNo-->
                            </div>
                            <div class="form-row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Soru" class="small mb-1 font-weight-bold">Soru</label>
                                        <textarea asp-for="Soru" placeholder="Soruyu buraya yazınız..." class="form-control" id="SoruTextArea" rows="5"></textarea>
                                        <span class="text-danger" asp-validation-for="Soru"></span>
                                    </div>
                                </div><!--Soru-->
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Cevap" class="small mb-1 font-weight-bold">Cevap</label>
                                        <textarea asp-for="Cevap" placeholder="Cevabı buraya yazınız..." class="form-control" id="CevapTextArea" rows="5"></textarea>
                                        <span class="text-danger" asp-validation-for="Cevap"></span>
                                    </div>
                                </div><!--Cevap-->
                            </div>
                            <div class="form-row">
                                <div class="col-md-12">
                                    <a asp-controller="MulakatSorulari" asp-action="Index" class="btn btn-primary btn-sm text-white" id="btnYeni" style="width:100px;display:none">Yeni Kayıt</a>
                                    <input type="submit" value="Güncelle" class="btn btn-success btn-sm text-white" style="width:100px" />
                                    <a asp-controller="MulakatSorulari" asp-action="Index" id="cancel" name="cancel" class="btn btn-danger btn-sm" style="width:100px">Vazgeç</a>
                                </div><!--ButonGrup-->
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-12">
        @await Component.InvokeAsync("MulakatSorulariListesi")
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="//cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/alertify.min.js"></script>

    <script type="text/javascript">

        var table = $('#myTableE').DataTable({

            destroy: true,
            ordering: false,

        });

        $("#soruIptal").on("change", function () {
            bootbox.confirm({
                message: "Bu soru durumu değiştirilecek! Emin misiniz?",
                buttons: {
                    confirm: {
                        label: 'Evet',
                        className: 'btn-success'
                    },
                    cancel: {
                        label: 'Hayır',
                        className: 'btn-danger'
                    }
                },
                callback: function (result) {
                    if (result) {

                        var mulakaId = $("#MulakatListesi").val();              
                        var dereceId = $("#DereceListesi").val();
                        var soruSiraNo = $("#SoruSiraNo").val();
                        var iptal=$("#soruIptal").val();
                        alert("Mülakat Id: " + mulakaId  + " Decece Id: " + dereceId  + " SN : " + soruSiraNo + " İptal : " + iptal);

                        var model = {

                            MulakatId: mulakaId,
                            DereceId: dereceId,
                            SoruSiraNo: soruSiraNo,
                            Iptal: iptal // Seçilen değere göre true/false
                        };

                        $.ajax({
                            type:'POST',
                            url: '/MulakatSorulari/SoruSiraNoIleTopluGuncelle',
                            data: model,

                    success: function (response) {

