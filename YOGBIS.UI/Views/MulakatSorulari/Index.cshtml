@model YOGBIS.Common.VModels.MulakatSorulariVM
@{
    ViewData["Title"] = "Mülakat Soruları";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-md-12 mb-1">
        <div class="card shadow-lg rounded-lg">
            <div class="card-header">
                <i class="fas fa-table mr-1"></i>
                <b>Mülakat Soruları Güncelleme</b>
            </div>
            <div class="card-body">
                <div class="form-row mb-2">
                    <div class="col-12">
                        <form class="form-group m-0" asp-action="MulakatSoruEkle">
                            @Html.HiddenFor(x => x.MulakatSorulariId)
                            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                            <div class="form-row">
                                <!--SoruSıraNo-->
                                <div class="col-md-1">
                                    <div class="form-group">
                                        <label asp-for="SoruSiraNo" class="small mb-1 font-weight-bold">Soru Sıra No</label>
                                        <input asp-for="SoruSiraNo" type="number" class="form-control py-2" id="SoruSiraNo">
                                        <span class="text-danger" asp-validation-for="SoruSiraNo"></span>
                                    </div>
                                </div>
                                <!--SoruNo-->
                                <div class="col-md-1">
                                    <div class="form-group">
                                        <label asp-for="SoruNo" class="small mb-1 font-weight-bold">Soru No</label>
                                        <input asp-for="SoruNo" type="number" class="form-control py-2" id="SoruNo">
                                        <span class="text-danger" asp-validation-for="SoruNo"></span>
                                    </div>
                                </div>
                                <!--SoruDerece-->
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label asp-for="DereceId" class="small mb-1 font-weight-bold">Dereceyi Seç</label>
                                        @Html.DropDownListFor(u => u.DereceId, new SelectList(ViewBag.Dereceler,
                                                 "DereceId", "DereceAdi"), "Dereceyi seçiniz", new { @id = "DereceListesi", @class = "form-control-range form-control p-0" })
                                        <span class="text-danger" asp-validation-for="DereceId"></span>
                                    </div>
                                </div>
                                <!--Mülakat-->
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label asp-for="MulakatId" class="small mb-1 font-weight-bold">Mülakatı Seç</label>
                                        @Html.DropDownListFor(m => m.MulakatId, new SelectList(ViewBag.Mulakatlar,
                                                 "MulakatId", "MulakatAdi"), "Mülakatı Seç", new { @id = "MulakatListesi", @class = "form-control-range form-control p-0" })
                                        <span class="text-danger" asp-validation-for="MulakatId"></span>
                                    </div>
                                </div>
                                <!--SoruKategori-->
                                <div class="col-md-2">
                                    <div class="form-group">
                                        <label asp-for="SoruKategorilerId" class="small mb-1 font-weight-bold">Soru Kategori Seç</label>
                                        @Html.DropDownListFor(k => k.SoruKategorilerId, new SelectList(ViewBag.SoruKategorileri,
                                                 "SoruKategorilerId", "SoruKategorilerAdi"), "Kategoriyi Seç", new { @id = "KategoriListesi", @class = "form-control-range form-control p-0" })
                                        <span class="text-danger" asp-validation-for="SoruKategorilerId"></span>
                                    </div>
                                </div>
                                <!--Soruİptal-->
                                <div class="col-md-2">
                                    <div class="form-group">
                                        <div class="form-group">
                                            <label asp-for="SoruSiraNo" class="small mb-1 font-weight-bold">Sorulabilir</label>
                                            <select asp-for="SoruSiraNo" class="form-control-range form-control py-0" aria-label="Default select example">
                                                <option asp-for="SoruSiraNo" selected class="text-left">Seçim Yapınız</option>
                                                <option asp-for="SoruSiraNo" value="True">Evet</option>
                                                <option asp-for="SoruSiraNo" value="False">Hayır</option>
                                            </select>
                                            <span class="text-danger" asp-validation-for="SoruSiraNo"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!--KategoriSiraNo-->
                            <div class="form-row" style="display:none">
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label asp-for="SoruKategoriSiraNo" class="small mb-1 font-weight-bold">Kategori Sıra No</label>
                                        <input asp-for="SoruKategoriSiraNo" type="number" class="form-control py-2" id="SoruKategoriSiraNo" placeholder="Kategori Sıra Numarası">
                                        <span class="text-danger" asp-validation-for="SoruKategoriSiraNo"></span>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label asp-for="SoruKategoriAdi" class="small mb-1 font-weight-bold">Soru Kategori Adı</label>
                                        <input asp-for="SoruKategoriAdi" type="text" class="form-control py-2" id="SoruKategoriAdi" placeholder="Kategori Adı Giriniz">
                                        <span class="text-danger" asp-validation-for="SoruKategoriAdi"></span>
                                    </div>
                                </div><!--KategoriAdi-->
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label asp-for="SinavKategoriTurAdi" class="small mb-1 font-weight-bold">Sınav Kategori Tür Adı</label>
                                        <input asp-for="SinavKategoriTurAdi" type="text" class="form-control py-2" id="SinavKategoriTurAdi" placeholder="Sınav Kategori Tür Adını Giriniz">
                                        <span class="text-danger" asp-validation-for="SinavKategoriTurAdi"></span>
                                    </div>
                                </div><!--SınavKategoriTurAdi-->
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label asp-for="SinavKateogoriTurId" class="small mb-1 font-weight-bold">Sınav Kategori Tür No</label>
                                        <input asp-for="SinavKateogoriTurId" type="number" class="form-control py-2" id="SinavKateogoriTurId" placeholder="Sınav Kategori Tür No Giriniz">
                                        <span class="text-danger" asp-validation-for="SinavKateogoriTurId"></span>
                                    </div>
                                </div><!--SinavKateogoriTurId-->
                            </div>
                            <div class="form-row" style="display:none">
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label asp-for="SoruSiraNo" class="small mb-1 font-weight-bold">Soru Sıra Numarası</label>
                                        <input asp-for="SoruSiraNo" type="number" class="form-control py-2" id="SoruSiraNo" placeholder="Soru Sıra No Giriniz">
                                        <span class="text-danger" asp-validation-for="SoruSiraNo"></span>
                                    </div>
                                </div><!--SoruSiraNo-->
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label asp-for="SoruNo" class="small mb-1 font-weight-bold">Soru Numarası</label>
                                        <input asp-for="SoruNo" type="number" class="form-control py-2" id="SoruNo" placeholder="Soru No Giriniz">
                                        <span class="text-danger" asp-validation-for="SoruNo"></span>
                                    </div>
                                </div><!--SoruNo-->
                            </div>
                            <div class="form-row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Soru" class="small mb-1 font-weight-bold">Soru</label>
                                        <textarea asp-for="Soru" placeholder="Soruyu buraya yazınız..." class="form-control" id="SoruTextArea" rows="5"></textarea>
                                        <span class="text-danger" asp-validation-for="Soru"></span>
                                    </div>
                                </div><!--Soru-->
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Cevap" class="small mb-1 font-weight-bold">Cevap</label>
                                        <textarea asp-for="Cevap" placeholder="Cevabı buraya yazınız..." class="form-control" id="CevapTextArea" rows="5"></textarea>
                                        <span class="text-danger" asp-validation-for="Cevap"></span>
                                    </div>
                                </div><!--Cevap-->
                            </div>
                            <div class="form-row">
                                <div class="col-md-12">
                                    <a asp-controller="MulakatSorulari" asp-action="Index" class="btn btn-primary btn-sm text-white" id="btnYeni" style="width:100px;display:none">Yeni Kayıt</a>
                                    <input type="submit" value="Kaydet" class="btn btn-success btn-sm text-white" style="width:100px;display:none" />
                                    <a asp-controller="MulakatSorulari" asp-action="Index" id="cancel" name="cancel" class="btn btn-danger btn-sm" style="width:100px;display:none">Vazgeç</a>
                                </div><!--ButonGrup-->
                            </div>
                        </form>
                    </div>
                </div>
                <div class="form-row m-2">
                    <div class="col-md-6">
                        <form asp-action="ExceldenMulakatSoruEkle" enctype="multipart/form-data" method="post" class="form-group m-0">
                            <div class="form-row">
                                <div class="form-group col-md-12">
                                    <div class="form-row">
                                        <div class="col-md-auto">
                                            <label>Excel Dosyası Seçin</label>
                                        </div>
                                        <div class="col-md-auto">
                                            <input type="file" name="file" class="form-control w-100" accept=".xlsx" required style="width:500px" />
                                        </div>
                                        <div class="col-md-auto">
                                            <button type="submit" class="btn btn-primary w-100">Yükle</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="col-md-6">
                        <div class="row">
                            <form id="uploadForm" enctype="multipart/form-data" style="display:none">
                                <input type="file" id="fileInput" name="file" accept=".xlsx" />
                                <button type="button" onclick="uploadExcel()">YükleAjax</button>
                            </form>
                            <form action="/" method="post" style="display:none">
                                <div class="form-row">
                                    <div class="col-auto">
                                        <button type="submit" class="btn btn-primary w-100">Önceki Soru</button>
                                    </div>
                                    <div class="col-auto">
                                        <button type="submit" class="btn btn-primary w-100">Sonraki Soru</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success col-md-12">
            @TempData["Message"]
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger col-md-12">
            <pre>@TempData["Error"]</pre>
        </div>
    }
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success col-md-12">
            @TempData["Success"]
        </div>
    }
    @if (TempData["Warning"] != null)
    {
        <div class="alert alert-warning col-md-12">
            @TempData["Warning"]
        </div>
    }
    <div class="col-md-12">
        @await Component.InvokeAsync("MulakatSorulariListesi")
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script type="text/javascript">

        $("#DereceListesi").on("change", function () {

            var DereceId = $("#DereceListesi").val();

           alert(DereceId); //işlem yaparken aç

           $('#MulakatListesi').focus();

            // kategorileri getir
            $("#KategoriListesi").empty();
            $("#KategoriListesi").append("<option value=''> Kategori seçiniz </option>");

            var url = '@Url.Action("KategoriAdGetir", "MulakatSorulari")?dereceId=' + DereceId;

            $.getJSON(url, function (data) {

                $.each(data, function (i = 0, soruKategorilerId, soruKategorilerAdi) {

                    //alert(data);
                    $('#KategoriListesi').append($('<option>', {
                        value: data[i]['soruKategorilerId'],
                        text: data[i]['soruKategorilerAdi']
                    }));

                });
            });


            

        });

        $("#MulakatListesi").on("change", function () {

            var mulakatId = $("#MulakatListesi").val();

            alert(mulakatId); //işlem yaparken aç

            $('#KategoriListesi').focus();

        });

        $("#KategoriListesi").on("change", function () {

            var SoruKategorilerId = $("#KategoriListesi").val();

            alert(SoruKategorilerId); // işlem yaparken aç

            //$("#SoruKategoriSiraNo").empty();
            //$("#SoruKategoriAdi").empty();
            //$("#SinavKategoriTurAdi").empty();
            //$("#SinavKateogoriTurId").empty();


            var url = '@Url.Action("KategoriDetayGetir", "MulakatSorulari")?soruKategorilerId=' + SoruKategorilerId;

            $.getJSON(url, function (data) {


                $.each(data, function (i = 0, soruKategorilerId, soruKategorilerSiraNo, soruKategorilerAdi, sinavKategoriTurAdi, sinavKateogoriTurId) {

                    //alert(data);
                    /*$('#KategoriListesi').append($('<option>', {
                        value: data[i]['soruKategorilerId'],
                        text: data[i]['soruKategorilerTakmaAdi']
                    }));*/

                    var ss = data[i]['soruKategorilerId'];

                    //$('#SoruKategoriAdi').focus();
                    $("#SoruKategoriAdi").text = ss;
                });
            });


        });

        var table = $('#myTableE').DataTable({

            destroy: true,
            ordering: false,

        });

        function uploadExcel() {
            var formData = new FormData();
            var fileInput = document.getElementById('fileInput');
            formData.append('file', fileInput.files[0]);

            $.ajax({
                url: '/MulakatSorulari/ExceldenMulakatSoruEkle',
                type: 'POST',
                data: formData,
                processData: false,
                contentType: false,
                success: function(response) {
                    alert('Yükleme başarılı!');
                    window.location.href = '/MulakatSorulari/Index';
                },
                error: function(xhr, status, error) {
                    alert('Hata oluştu: ' + error);
                }
            });
        }

    </script>
}
