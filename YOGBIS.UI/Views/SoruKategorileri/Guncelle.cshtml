@model YOGBIS.Common.VModels.SoruKategorilerVM
@{
    ViewData["Title"] = "Soru Kategorisi Ekleme";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles {

    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/tempusdominus-bootstrap-4/5.0.1/css/tempusdominus-bootstrap-4.min.css" />
    <link rel="stylesheet" href="//cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/css/alertify.min.css" />
}

<div class="row">
    <div class="col-md-12">
        <div class="card mb-3">
            <div class="card-header">
                <i class="fas fa-pen mr-1"></i>
                <b>Soru Kategorisi Güncelleme</b>
            </div>
            <div class="card-body">
                <form class="form-group m-0" asp-action="SoruKategoriEkle">
                    @Html.HiddenFor(x => x.SoruKategorilerId)
                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                    <div class="form-row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label asp-for="DereceId" class="small mb-1 font-weight-bold">Derece</label>
                                @Html.DropDownListFor(u => u.DereceId, new SelectList(ViewBag.Dereceler,
                                         "DereceId", "DereceAdi"), "Dereceyi seçiniz", new { @id = "DereceListesi", @class = "form-control-range form-control py-2" })
                                <span class="text-danger" asp-validation-for="DereceId"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="SoruKategorilerSiraNo" class="small mb-1 font-weight-bold">Kategori Sıra Numarası</label>
                                <input asp-for="SoruKategorilerSiraNo" type="number" class="form-control py-2" id="SoruKategorilerSiraNo" placeholder="Kategori Sıra Numarasını Giriniz">
                                <span class="text-danger" asp-validation-for="SoruKategorilerSiraNo" id="SoruKategoriSiraNoVal"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="SoruKategorilerAdi" class="small mb-1 font-weight-bold">Kategori Adı</label>
                                <input asp-for="SoruKategorilerAdi" type="text" class="form-control py-2" id="SoruKategorilerAdi" placeholder="Kategori Adını Giriniz">
                                <span class="text-danger" asp-validation-for="SoruKategorilerAdi" id="SoruKategorilerAdiVal"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label asp-for="SoruKategorilerKullanimi" class="small mb-1 font-weight-bold">Kategori Kullanımı</label>
                                <select asp-for="SoruKategorilerKullanimi" class="form-control-range form-control py-2" aria-label="Default select example" id="SoruKategorilerKullanimi">
                                    <option asp-for="SoruKategorilerKullanimi" selected class="text-center"></option>
                                    <option asp-for="SoruKategorilerKullanimi" value="Sınav">Sınav</option>
                                    <option asp-for="SoruKategorilerKullanimi" value="Değerlendirme">Değerlendirme</option>
                                </select>
                                <span class="text-danger" asp-validation-for="SoruKategorilerKullanimi"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-2">
                            <div class="form-group">
                                <label asp-for="SoruKategorilerPuan" class="small mb-1 font-weight-bold">Kategori Puan</label>
                                <input asp-for="SoruKategorilerPuan" type="number" class="form-control py-2" id="SoruKategorilerPuan" placeholder="Kategori Puanını Giriniz">
                                <span class="text-danger" asp-validation-for="SoruKategorilerPuan"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-2">
                            <div class="form-group">
                                <label asp-for="SinavKateogoriTurId" class="small mb-1 font-weight-bold">Sınav Kategori Tür No</label>
                                <input asp-for="SinavKateogoriTurId" type="number" class="form-control py-2" id="SoruKategorilerPuan" placeholder="Sınav Kategori No Giriniz">
                                <span class="text-danger" asp-validation-for="SinavKateogoriTurId"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="SinavKategoriTurAdi" class="small mb-1 font-weight-bold">Sınav Kategori Adı</label>
                                <input asp-for="SinavKategoriTurAdi" type="text" class="form-control py-2" id="SinaKategoriTurAdi" placeholder="Sınav Kategori Adını Giriniz">
                                <span class="text-danger" asp-validation-for="SinavKategoriTurAdi" id="SoruKategorilerAdiVal"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="SoruKategorilerTakmaAdi" class="small mb-1 font-weight-bold">Sınav Kategori Takma Adı</label>
                                <input asp-for="SoruKategorilerTakmaAdi" type="text" class="form-control py-2" id="SoruKategorilerTakmaAdi" placeholder="Sınav Kategori Takma Adını Giriniz">
                                <span class="text-danger" asp-validation-for="SoruKategorilerTakmaAdi" id="SoruKategorilerAdiVal"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="SoruKategorilerTamAdi" class="small mb-1 font-weight-bold">Sınav Kategori Tam Adı</label>
                                <textarea asp-for="SoruKategorilerTamAdi" placeholder="Sınav Kategori Tam Adını Yazınız" class="form-control py-2" id="SoruKategorilerTamAdi" rows="5"></textarea>
                                <span class="text-danger" asp-validation-for="SoruKategorilerTamAdi" id="SoruKategorilerAdiVal"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-6">
                            <a class="btn btn-primary btn-sm text-white mb-1" id="btnYeni" style="width:100px" asp-controller="SoruKategorileri" asp-action="Index">Yeni Kayıt</a>
                            <input type="submit" value="Değiştir" class="btn btn-success btn-sm text-white mb-1" style="width:100px" />
                            <a class="btn btn-danger btn-sm text-white mb-1" id="btnSil" style="width:100px">Sil</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-12">
        @await Component.InvokeAsync("SoruKategoriListesi")
    </div>
</div>



@section Scripts {

    <partial name="_ValidationScriptsPartial" />
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="//cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/alertify.min.js"></script>

    <script type="text/javascript">

        $(document).ready(function () {

            $("#btnSil").on("click", function () {

                document.getElementById("SoruKategorilerId").focus();
                var id = $("#SoruKategorilerId").val();

                    bootbox.confirm({
                    message: "Silmek istediğinize emin misiniz?",
                    buttons: {
                        confirm: {
                            label: 'Evet',
                            className: 'btn-success'
                        },
                        cancel: {
                            label: 'Hayır',
                            className: 'btn-danger'
                        }
                    },
                    callback: function (result) {
                        if (result) {
                        $.ajax({
                            type: "DELETE",
                            url: "/SoruKategorileri/SoruKategoriSil/" + id,
                            success: function () {
                                alertify.success('Kayıt silindi');
                                setTimeout(function() {
                                location.href="/SoruKategorileri/Index";
                            }, 2000);

                            }
                        });
                        }
                    }
                });

            });

        });

    </script>
}


