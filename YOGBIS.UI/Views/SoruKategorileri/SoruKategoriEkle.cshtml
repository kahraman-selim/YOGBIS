@model YOGBIS.Common.VModels.SoruKategorilerVM
@{
    ViewData["Title"] = "Soru Kategorisi Ekleme";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card mb-3">
            <div class="card-header">
                <i class="fas fa-pen mr-1"></i>
                <b>Soru Kategorisi Ekleme</b>
            </div>
            <div class="card-body">
                <form class="form-group m-0" asp-action="SoruKategoriEkle" asp-controller="SoruKategorileri" id="soruKategoriForm">
                    @Html.HiddenFor(x => x.SoruKategorilerId)
                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                    <div class="form-row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label asp-for="DereceId" class="small mb-1 font-weight-bold">Derece</label>
                                @Html.DropDownListFor(u => u.DereceId, new SelectList(ViewBag.Dereceler,
                                         "DereceId", "DereceAdi"), "Dereceyi seçiniz", new { @class = "form-control-range form-control py-2" })
                                <span class="text-danger" asp-validation-for="DereceId"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="SoruKategorilerSiraNo" class="small mb-1 font-weight-bold">Kategori Sıra Numarası</label>
                                <input asp-for="SoruKategorilerSiraNo" type="number" class="form-control py-2" placeholder="Kategori Sıra Numarasını Giriniz">
                                <span class="text-danger" asp-validation-for="SoruKategorilerSiraNo"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="SoruKategorilerAdi" class="small mb-1 font-weight-bold">Kategori Adı</label>
                                <input asp-for="SoruKategorilerAdi" type="text" class="form-control py-2" placeholder="Kategori Adını Giriniz">
                                <span class="text-danger" asp-validation-for="SoruKategorilerAdi"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label asp-for="SoruKategorilerKullanimi" class="small mb-1 font-weight-bold">Kategori Kullanımı</label>
                                <select asp-for="SoruKategorilerKullanimi" class="form-control-range form-control py-2">
                                    <option value="">Kategori Kullanımını Seçiniz</option>
                                    <option value="Sınav">Sınav</option>
                                    <option value="Değerlendirme">Değerlendirme</option>
                                </select>
                                <span class="text-danger" asp-validation-for="SoruKategorilerKullanimi"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-2">
                            <div class="form-group">
                                <label asp-for="SoruKategorilerPuan" class="small mb-1 font-weight-bold">Kategori Puan</label>
                                <input asp-for="SoruKategorilerPuan" type="number" class="form-control py-2" placeholder="Kategori Puanını Giriniz">
                                <span class="text-danger" asp-validation-for="SoruKategorilerPuan"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-2">
                            <div class="form-group">
                                <label asp-for="SinavKateogoriTurId" class="small mb-1 font-weight-bold">Sınav Kategori Tür No</label>
                                <input asp-for="SinavKateogoriTurId" type="number" class="form-control py-2" placeholder="Sınav Kategori No Giriniz">
                                <span class="text-danger" asp-validation-for="SinavKateogoriTurId"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="SinavKategoriTurAdi" class="small mb-1 font-weight-bold">Sınav Kategori Adı</label>
                                <input asp-for="SinavKategoriTurAdi" type="text" class="form-control py-2" placeholder="Sınav Kategori Adını Giriniz">
                                <span class="text-danger" asp-validation-for="SinavKategoriTurAdi"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="SoruKategorilerTakmaAdi" class="small mb-1 font-weight-bold">Sınav Kategori Takma Adı</label>
                                <input asp-for="SoruKategorilerTakmaAdi" type="text" class="form-control py-2" placeholder="Sınav Kategori Takma Adını Giriniz">
                                <span class="text-danger" asp-validation-for="SoruKategorilerTakmaAdi"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="SoruKategorilerTamAdi" class="small mb-1 font-weight-bold">Sınav Kategori Tam Adı</label>
                                <textarea asp-for="SoruKategorilerTamAdi" placeholder="Sınav Kategori Tam Adını Yazınız" class="form-control py-2" rows="5"></textarea>
                                <span class="text-danger" asp-validation-for="SoruKategorilerTamAdi"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-6">
                            <input type="submit" value="Kaydet" class="btn btn-success btn-sm text-white mb-1" style="width:100px" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-12">
        @await Component.InvokeAsync("SoruKategoriListesi")
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
