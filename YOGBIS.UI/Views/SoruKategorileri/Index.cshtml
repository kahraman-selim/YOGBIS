@model YOGBIS.Common.VModels.SoruKategorilerVM
@{
    ViewData["Title"] = "Soru Kategorileri";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles {

    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">    
    <link rel="stylesheet" href="//cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/css/alertify.min.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">    
}

<div class="row">
    <div class="col-md-12">
        <div class="card mb-3">
            <div class="card-header">
                <i class="fas fa-pen mr-1"></i>
                <b>Soru Kategorisi Ekleme/Güncelleme</b>
            </div>
            <div class="card-body">
                <form class="form-group m-0" asp-action="SoruKategoriEkle">
                    @Html.HiddenFor(x => x.SoruKategorilerId)
                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                    <div class="form-row">
                        <div class="col-md-3">
                            <div class="form-group">
                                @if (ViewBag.Dereceler != null && ViewBag.Dereceler.Count > 0)
                                {
                                    <label asp-for="DereceId" class="small mb-1 font-weight-bold">Derece</label>
                                    @Html.DropDownListFor(u => u.DereceId, new SelectList(ViewBag.Dereceler,
                                             "DereceId", "DereceAdi"), "Dereceyi seçiniz", new { @id = "DereceListesi", @class = "form-control-range form-control py-2" })
                                    <span class="text-danger" asp-validation-for="DereceId"></span>
                                }
                                else
                                {
                                    <select class="form-control-range form-control py-2" aria-label="Default select example">
                                        <option selected class="text-left">Seçim yapınız</option>
                                    </select>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="SoruKategorilerSiraNo" class="small mb-1 font-weight-bold">Kategori Sıra Numarası</label>
                                <input asp-for="SoruKategorilerSiraNo" type="number" class="form-control py-2" id="SoruKategorilerSiraNo" placeholder="Kategori Sıra Numarasını Giriniz">
                                <span class="text-danger" asp-validation-for="SoruKategorilerSiraNo" id="SoruKategoriSiraNoVal"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="SoruKategorilerAdi" class="small mb-1 font-weight-bold">Kategori Adı</label>
                                <input asp-for="SoruKategorilerAdi" type="text" class="form-control py-2" id="SoruKategorilerAdi" placeholder="Kategori Adını Giriniz">
                                <span class="text-danger" asp-validation-for="SoruKategorilerAdi" id="SoruKategorilerAdiVal"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label asp-for="SoruKategorilerKullanimi" class="small mb-1 font-weight-bold">Kategori Kullanımı</label>
                                <select asp-for="SoruKategorilerKullanimi" class="form-control-range form-control py-2" aria-label="Default select example" id="SoruKategorilerKullanimi">
                                    <option asp-for="SoruKategorilerKullanimi" selected class="text-center"></option>
                                    <option asp-for="SoruKategorilerKullanimi" value="Sınav">Sınav</option>
                                    <option asp-for="SoruKategorilerKullanimi" value="Değerlendirme">Değerlendirme</option>
                                </select>
                                <span class="text-danger" asp-validation-for="SoruKategorilerKullanimi"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-2">
                            <div class="form-group">
                                <label asp-for="SoruKategorilerPuan" class="small mb-1 font-weight-bold">Kategori Puan</label>
                                <input asp-for="SoruKategorilerPuan" type="number" class="form-control py-2" id="SoruKategorilerPuan" placeholder="Kategori Puanını Giriniz">
                                <span class="text-danger" asp-validation-for="SoruKategorilerPuan"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-2">
                            <div class="form-group">
                                <label asp-for="SinavKateogoriTurId" class="small mb-1 font-weight-bold">Sınav Kategori Tür No</label>
                                <input asp-for="SinavKateogoriTurId" type="number" class="form-control py-2" id="SoruKategorilerPuan" placeholder="Sınav Kategori No Giriniz">
                                <span class="text-danger" asp-validation-for="SinavKateogoriTurId"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="SinavKategoriTurAdi" class="small mb-1 font-weight-bold">Sınav Kategori Tür Adı</label>
                                <input asp-for="SinavKategoriTurAdi" type="text" class="form-control py-2" id="SinaKategoriTurAdi" placeholder="Sınav Kategori Adını Giriniz">
                                <span class="text-danger" asp-validation-for="SinavKategoriTurAdi" id="SoruKategorilerAdiVal"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="SoruKategorilerTakmaAdi" class="small mb-1 font-weight-bold">Sınav Kategori Takma Adı</label>
                                <input asp-for="SoruKategorilerTakmaAdi" type="text" class="form-control py-2" id="SoruKategorilerTakmaAdi" placeholder="Sınav Kategori Takma Adını Giriniz">
                                <span class="text-danger" asp-validation-for="SoruKategorilerTakmaAdi" id="SoruKategorilerAdiVal"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="SoruKategorilerTamAdi" class="small mb-1 font-weight-bold">Sınav Kategori Tam Adı</label>
                                <textarea asp-for="SoruKategorilerTamAdi" placeholder="Sınav Kategori Tam Adını Yazınız" class="form-control py-2" id="SoruKategorilerTamAdi" rows="5"></textarea>
                                <span class="text-danger" asp-validation-for="SoruKategorilerTamAdi" id="SoruKategorilerAdiVal"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-6">
                            <input type="submit" value="Kaydet" class="btn btn-success btn-sm text-white mb-1" style="width:100px" />
                        </div>
                    </div>
                </form>
                <div class="col-md-9" id="KategoriExcelYukle">
                    <hr />
                    <div class="card">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0"><i class="fas fa-file-excel"></i> Toplu Kategori Yükleme</h5>
                        </div>
                        <div class="card-body">
                            <form id="uploadForm" enctype="multipart/form-data" method="post" onsubmit="return submitForm(event)">
                                <div class="form-group">
                                    <div class="custom-file">
                                        <input type="file" name="file" class="custom-file-input" accept=".xlsx" required />
                                        <label class="custom-file-label">Excel dosyası seçiniz...</label>
                                    </div>
                                    <small class="form-text text-muted">
                                        Maksimum dosya boyutu: 10MB
                                    </small>
                                </div>
                                <div class="form-group mb-0">
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-upload"></i> Yükle
                                    </button>
                                    <a href="#" class="btn btn-secondary" onclick="$('#KategoriExcelYukle').slideUp(); return false;">
                                        <i class="fas fa-times"></i> İptal
                                    </a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-12 mb-1" id="TepmdataAlanı">
        @if (TempData["success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle"></i> @TempData["success"]
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
        @if (TempData["error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-circle"></i> @TempData["error"]
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
    </div>
    <div class="col-md-12">
        @await Component.InvokeAsync("SoruKategoriListesi")
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="//cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/alertify.min.js"></script>      
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootbox.js/5.5.2/bootbox.min.js"></script>

    <script type="text/javascript">
        
        $(document).ready(function () {
            // Success message
            @if (TempData["success"] != null)
            {
                <text>
                alertify.success('@TempData["success"]');
                </text>
            }

            // Error message
            @if (TempData["error"] != null)
            {
                <text>
                alertify.error('@TempData["error"]');
                </text>
            }

            // Dosya seçildiğinde label güncelleme
            $('.custom-file-input').on('change', function () {
                var fileName = $(this).val().split('\\').pop();
                $(this).next('.custom-file-label').html(fileName || 'Excel dosyası seçiniz...');
            });

            // Derece değişikliği kontrolü
            dereceChanged();
            $('#DereceId').change(dereceChanged);

        });

        function dereceChanged() {
            var dereceId = $('#DereceId').val();
            if (dereceId) {
                $('#KategoriExcelYukle').slideDown();
            } else {
                $('#KategoriExcelYukle').slideUp();
                $('.custom-file-input').val('');
                $('.custom-file-label').html('Excel dosyası seçiniz...');
            }
        }

        function submitForm(event) {
            event.preventDefault();

            var dereceId = $('#DereceId').val();
            if (!dereceId) {
                alertify.error('Lütfen önce bir Derece seçiniz!');
                return false;
            }

            var fileInput = $('.custom-file-input')[0];
            if (!fileInput.files.length) {
                alertify.error('Lütfen bir Excel dosyası seçiniz!');
                return false;
            }

            // Dosya uzantısı kontrolü
            var fileName = fileInput.files[0].name;
            var fileExt = fileName.split('.').pop().toLowerCase();
            if (fileExt !== 'xlsx') {
                alertify.error('Lütfen sadece .xlsx uzantılı Excel dosyası seçiniz!');
                return false;
            }

            // Dosya boyutu kontrolü (max 10MB)
            if (fileInput.files[0].size > 10 * 1024 * 1024) {
                alertify.error('Dosya boyutu 10MB\'dan büyük olamaz!');
                return false;
            }

            var formData = new FormData();
            formData.append('file', fileInput.files[0]);
            formData.append('dereceId', dereceId);

            var $submitButton = $('#uploadForm button[type="submit"]');
            $submitButton.prop('disabled', true)
                .html('<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Yükleniyor...');

            $.ajax({
                url: '/SoruKategorileri/KategoriYukle',
                type: 'POST',
                data: formData,
                processData: false,
                contentType: false,
                success: function (result) {
                    if (result.success) {
                        Swal.fire({
                            icon: 'success',
                            title: 'Başarılı!',
                            text: result.message || 'Excel dosyası başarıyla yüklendi.',
                            confirmButtonText: 'Tamam'
                        }).then((result) => {
                            window.location.reload();
                        });
                    } else {
                        var errorMessage = result.error || 'Excel dosyası yüklenirken bir hata oluştu!';
                        // Kullanıcı adı hatalarını düzenli göster
                        if (errorMessage.includes('bulunamadı')) {
                            errorMessage = errorMessage.split('\n').map(function(line) {
                                return line.trim();
                            }).filter(Boolean).join('<br>');
                        }

                        Swal.fire({
                            icon: 'error',
                            title: 'Hata!',
                            html: errorMessage,
                            confirmButtonText: 'Tamam'
                        });
                        $submitButton.prop('disabled', false).html('<i class="fas fa-upload"></i> Yükle');
                    }
                },
                error: function (xhr) {
                    console.error('Hata:', xhr);
                    var errorMessage = 'Excel dosyası yüklenirken bir hata oluştu!';

                    if (xhr.responseJSON && xhr.responseJSON.error) {
                        errorMessage = xhr.responseJSON.error;
                    } else if (xhr.status === 400) {
                        errorMessage = 'Geçersiz istek! Lütfen dosyanızı kontrol ediniz.';
                    } else if (xhr.status === 401) {
                        errorMessage = 'Oturum süreniz dolmuş olabilir. Lütfen sayfayı yenileyiniz.';
                    } else if (xhr.status === 413) {
                        errorMessage = 'Dosya boyutu çok büyük!';
                    } else if (xhr.status >= 500) {
                        errorMessage = 'Sunucu hatası! Lütfen daha sonra tekrar deneyiniz.';
                    }

                    Swal.fire({
                        icon: 'error',
                        title: 'Hata!',
                        text: errorMessage,
                        confirmButtonText: 'Tamam'
                    });
                    $submitButton.prop('disabled', false).html('<i class="fas fa-upload"></i> Yükle');
                }
            });

            return false;
        }

    </script>
}
