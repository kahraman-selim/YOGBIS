@*@model IEnumerable<YOGBIS.Common.VModels.MulakatSorulariVM>*@
@{
    ViewData["Title"] = "Mülakat";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {

    <link rel="stylesheet" href="//cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/css/alertify.min.css" />
}

<style type="text/css">
    #soruBlok {
        display: none;
    }

    #AdayNotBlok {
        display: none;
    }

    #btnBitir {
        display: none;
    }

    #AdayBilgiBlok {
        display: none;
    }

</style>

<!-- Aday Özet Blok -->
<div class="row m-0 p-0">
    <div class="col-lg-12">
        <div class="card shadow-lg" style="height:75px">
            <h6 class="card-header text-center text-danger">ADAY BİLGİLERİ - @DateTime.Now.ToShortDateString() </h6>
            <div class="card-body p-1">
                <p class="card-text text-center text-danger font-weight-bold">
                    <span id="adayadsoyad" class="text-info">Aday Adı Soyadı</span>
                    <span>-</span>
                    <span id="adayderece" class="text-primary">Öğretmen</span>
                    <span>-</span>
                    <span id="adaybrans" class="text-secondary">Branş</span>
                    <span>-</span>
                    <span id="adayulke" class="text-dark">Ülke Grubu</span>
                </p>
            </div>
        </div>
        <div class="card shadow-lg" style="height:50px">
            <div class="card-body p-1">
                <p class="text-center font-weight-bold p-1">
                    <input value="Bilgi Formu" class="btn btn-primary btn-sm ml-1" style="width:180px" id="btnBilgi" />
                    <input value="Aday Sınava Girmedi" class="btn btn-danger btn-sm ml-1" id="btnIptal" />
                    <input value="Soruları Göster" class="btn btn-secondary btn-sm ml-1" id="btnSoruGoster" style="display:none" />
                </p>
            </div>
        </div>
    </div>
</div>

<!-- Buton Blok -->
<div class="row m-0 mt-1">
    <div class="col-lg-12">
        <input type="number" id="soruNo" class="form-control font-weight-bold text-center text-danger" style="font-size:22px;border-color:darkred;border-style:double" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" min="1" placeholder="Soru Numarasını Giriniz">
        <input type="submit" value="Mülakatı Başlat" class="btn btn-primary w-100 mt-1" id="btnBaslat" />
        <input type="submit" value="Mülakatı Bitir" class="btn btn-danger w-100 mt-1" id="btnBitir" />
    </div>
</div>

<!--Aday Bilgi Blok-->
<div class="row col-xl-12 m-0 mt-2" id="AdayBilgiBlok" disable>
    @await Component.InvokeAsync("AdayBilgi")
</div>

<!-- Not Blok-->
<div class="row col-xl-12 m-0 mt-2 disable" id="AdayNotBlok">
    @await Component.InvokeAsync("AdayNot")
</div>

