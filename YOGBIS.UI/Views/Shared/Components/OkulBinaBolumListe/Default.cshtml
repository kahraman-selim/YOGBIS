
@model IEnumerable<YOGBIS.Common.VModels.OkulBinaBolumVM>



<div class="table-responsive">
    <table class="table table-bordered table-sm table-hover table-striped display responsive nowrap" id="okulBolumTable" width="100%" cellspacing="0">
        <thead>
            <tr>
                <th>Sıra No</th>
                <th>Bölüm Adı</th>
                <th>Adedi</th>
                <th class="text-center">Sil</th>
            </tr>
        </thead>
        <tbody>
            @{ var sirano = 0;}
            @if (Model != null)
            {
                @foreach (var item in Model)
                {
                    sirano++;
                    <tr>
                        <td>@sirano</td>
                        <td>@item.BolumAdi</td>
                        <td>@item.BolumAdedi</td>
                        <td class="text-center">
                            <a class="btn btn-sm btn-danger btnSil" title="Sil" id="btnSil" data-id="@item.OkulBinaBolumId">
                                <i class="fas fa-trash text-white"></i>
                            </a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td>Kayıt bulunamadı!</td>
                </tr>
            }
        </tbody>
    </table>
</div>




