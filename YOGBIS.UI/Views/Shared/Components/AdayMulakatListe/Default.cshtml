@model IEnumerable<YOGBIS.Common.VModels.AdaylarVM>



<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-hover table-striped display responsive nowrap" id="myTableE" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th class="text-center">SN</th>
                        <th class="text-center">TC</th>
                        <th class="text-center">AD</th>
                        <th class="text-center">SOYAD</th>
                        <th class="text-center">UNVAN</th>
                        <th class="text-center">ÜLKE TERCİHİ</th>
                        <th class="text-center">BRANŞ</th>
                        <th class="text-center">SAAT</th>
                        <th class="text-center"></th>
                        <th class="text-center"></th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        var sirano = 0;
                    }
                    @if (Model != null)
                    {
                        @foreach (var item in Model)
                        {
                            sirano++;
                            <tr>
                                <td>@item.KomisyonSN</td>                                
                                
                                <td><a asp-controller="Adaylar" asp-action="Guncelle" asp-route-id="@item.AdayId" id="AdayTC">@item.TC</a></td>
                                <td>@item.Ad</td>
                                <td>@item.Soyad</td>
                                <td>@item.DereceAdi</td>
                                <td>@item.UlkeTercihi</td>
                                <td>@item.Brans</td>
                                <td>@item.MYSSSaat</td>
                                <td class="text-center">
                                    <a class="btn btn-sm btn-secondary btnCagri text-white" title="Adayı Çağır" id="btnCagri" data-id="@item.AdayId" style="background-color: darkorange;font-weight:bold;font-size:13px;width:100px">Adayı Çağır</a>
                                </td>
                                <td class="text-center">
                                    <a class="btn btn-sm btn-secondary btnSinavaAl text-white" title="Adayı Sınava Al" id="btnSinavAl" data-id="@item.AdayId" style="background-color: darkgreen;font-weight:bold;font-size:13px;width:100px">Sınava Çağır</a>
                                </td>                                
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td>Kayıt bulunamadı!</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>




