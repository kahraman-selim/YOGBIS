@model IEnumerable<YOGBIS.Common.VModels.AdaylarVM>


<div class="table-responsive">
    <table class="table table-bordered table-hover table-striped display nowrap" id="myTable" width="100%" cellspacing="0">
        <thead>
            <tr>
                <th class="text-center">SN</th>
                <th class="text-center">TC</th>
                <th class="text-center">Ad</th>
                <th class="text-center">Soyad</th>
            </tr>
        </thead>
        <tbody>
            @{
                var sirano = 0;
            }
            @if (Model != null)
            {
                @foreach (var item in Model)
                {
                    sirano++;
                    <tr>
                        <td style="width:20px">@sirano</td>
                        <td class="text-center" style="width:20px">
                            <a asp-controller="AdayTanimlama" asp-action="Index" asp-route-id="@item.AdayId" id="AdayId">
                                @item.TC
                            </a>
                        </td>
                        <td style="width:20px">@item.Ad</td>
                        <td style="width:20px">@item.Soyad</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
