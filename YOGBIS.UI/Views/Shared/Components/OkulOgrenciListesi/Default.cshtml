@model IEnumerable<YOGBIS.Common.VModels.OgrencilerVM>

<div class="card shadow-lg rounded-lg mt-0" style="width:100%">
    <div class="card-header">
        <i class="fas fa-table mr-1"></i>
        <b>Öğrenci Listesi</b>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-sm table-hover table-striped display responsive nowrap" id="myTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Sıra No</th>
                        <th>Şube Adı</th>
                        <th>Sınıf Adı</th>
                        <th>Kayıt Tarihi</th>
                        <th>Kayıt Sayısı</th>
                        <th>Ayrılma Tarihi</th>
                        <th>Ayrılan Sayısı</th>
                        <th class="text-center">Değiştir</th>
                        <th class="text-center">Sil</th>
                    </tr>
                </thead>
                <tbody>
                    @{ var sirano = 0;}
                    @if (Model != null)
                    {
                        @foreach (var item in Model)
                        {
                            sirano++;
                    <tr>
                        <td>@sirano</td>
                        <td>@item.SubeAdi</td>
                        <td>@item.SinifAdi</td>
                        @if (item.BaslamaKayitTarihi != null)
                        {
                            <td>@item.BaslamaKayitTarihi.ToString("dd/MM/yyyy")</td>
                            <td>@item.KayitSayisi</td>
                        }
                        @if (item.AyrilmaTarihi.GetValueOrDefault() != null)
                        {
                            <td>@item.AyrilmaTarihi.GetValueOrDefault().ToString("dd/MM/yyyy")</td>
                            <td>@item.AyrilanSayisi</td>
                        }
                        else
                        {
                            <td></td>
                            <td>0</td>
                        }
                        <td class="text-center">
                            <a class="btn btn-sm btn-info btnOgrenciDegistir" title="degistir"
                               asp-controller="Ogrenciler" asp-action="OgrenciEkle" asp-route-id="@item.OgrencilerId">
                                <i class="fas fa-edit text-white"></i>
                            </a>
                        </td>
                        <td class="text-center">
                            <a class="btn btn-sm btn-danger btnOgrenciSil" title="Sil" id="@item.OgrencilerId" data-id="@item.OgrencilerId">
                                <i class="fas fa-trash text-white"></i>
                            </a>
                        </td>
                    </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td>Kayıt bulunamadı!</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>



