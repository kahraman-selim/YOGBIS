
@model IEnumerable<YOGBIS.Common.VModels.MulakatSorulariVM>


<div class="card mb-3">
    <div class="card-header">
        <i class="fas fa-table mr-1"></i>
        <b>Mülakat Soruları</b>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-hover table-striped display nowrap" id="myTableE" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th class="text-center">Soru Sıra No</th>
                        <th class="text-center">Soru No</th>
                        <th class="text-center">Derecesi</th>
                        <th class="text-center">Kategori Adı</th>
                        <th class="text-center">Soru</th>
                        <th class="text-center">Cevap</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td style="width:20px">@item.SoruSiraNo</td>
                                <td class="text-center" style="width:20px">
                                    <a asp-controller="MulakatSorulari" asp-action="Guncelle" asp-route-id="@item.MulakatSorulariId" id="SoruNo">
                                        @item.SoruNo
                                    </a>
                                </td>
                                <td style="width:20px">@item.DereceAdi</td>
                                <td style="width:20px">@item.SoruKategoriAdi</td>
                                <td style="width:auto">@item.Soru</td>
                                <td style="width:auto">@item.Cevap</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>






