
@model IEnumerable<YOGBIS.Common.VModels.MulakatSorulariVM>


<div class="card mb-3">
    <div class="card-header">
        <i class="fas fa-table mr-1"></i>
        <b>Mülakat Soruları</b>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-hover table-striped display responsive nowrap" id="myTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th class="text-center">Sıra No</th>
                        <th class="text-center">Soru Sıra No</th>
                        <th class="text-center">Soru No</th>
                        <th class="text-center">Derecesi</th>
                        <th class="text-center">Kategori Adı</th>
                        <th class="text-center">Soru</th>
                        <th class="text-center">Cevap</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        var sirano = 0;
                    }
                    @if (Model != null)
                    {
                        @foreach (var item in Model)
                        {
                            sirano++;
                            <tr>
                                <td>@sirano</td>
                                <td>@item.SoruSiraNo</td>
                                <td class="text-center">
                                    <a asp-controller="MulakatSorulari" asp-route-id="@item.MulakatSorulariId" id="SoruNo">
                                        @item.SoruNo
                                    </a>
                                </td>
                                <td>@item.SoruDereceAdi</td>
                                <td>@item.KategoriAdi</td>
                                <td>@item.Soru</td>
                                <td>@item.Cevap</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td>Kayıt bulunamadı!</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>







