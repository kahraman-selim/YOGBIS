@model List<YOGBIS.Common.VModels.AdayTYSVM>

<div class="card mb-3">
    <div class="card-header">
        <i class="fas fa-table mr-1"></i>
        <b>Aday Temsil Yeteneği Sınavı Bilgileri</b>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-hover table-striped display responsive nowrap" id="myTableE" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Mülakat Yılı</th>
                        <th>Komisyon</th>
                        <th>Sınav Tarihi</th>
                        <th>Sınav Saati</th>
                        <th>Gün SN</th>
                        <th>Soru No</th>
                        <th>TYS Puan</th>
                        <th>TYS Sonuç</th>
                        <th>TYS Durum</th>
                        <th>TYS Durum Açıklama</th>
                        <th>Görevlendirme SN</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model.Where(x => x.MulakatId.HasValue))
                        {
                            <tr>
                                <td>@item.MulakatYil</td>
                                <td>@item.TYSKomisyonAdi</td>
                                <td>@item.TYSTarih</td>
                                <td>@item.TYSSaat</td>
                                <td>@item.KomisyonGunSN</td>
                                <td>@item.TYSSorulanSoruNo</td>
                                <td>@item.TYSPuan</td>
                                <td>@item.TYSSonuc</td>
                                <td>@item.TYSDurumu</td>
                                <td>@item.TYSDurumAck</td>
                                <td>@item.GorevlendirmeSiraNo</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="11" class="text-center" style="padding: 20px;">
                                <i class="fas fa-info-circle text-info mr-2"></i>
                                Herhangi bir kayıt bulunamadı!
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
