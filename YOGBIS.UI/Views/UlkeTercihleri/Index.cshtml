@using Microsoft.AspNetCore.Identity
@inject SignInManager<YOGBIS.Data.DbModels.Kullanici> SignInManager
@inject UserManager<YOGBIS.Data.DbModels.Kullanici> UserManager
@model IEnumerable<YOGBIS.Common.VModels.UlkeTercihVM>

@{
    ViewData["Title"] = "Ülke Tercihleri";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles {

    <link rel="stylesheet" href="//cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/css/alertify.min.css" />
}
@if (TempData["Message"] != null)
{
    <div class="alert alert-success col-md-12">
        @TempData["Message"]
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger col-md-12">
        <pre>@TempData["Error"]</pre>
    </div>
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success col-md-12">
        @TempData["Success"]
    </div>
}
@if (TempData["Warning"] != null)
{
    <div class="alert alert-warning col-md-12">
        @TempData["Warning"]
    </div>
}
<div class="row">
    <div class="col-md-4">
        <div class="card mb-3">
            <div class="card-header">
                <i class="fas fa-pen mr-1"></i>
                <b>Ülke Tercihi Ekleme/Güncelleme</b>
            </div>
            <div class="card-body">
                <form class="form-group m-0" asp-action="UlkeTercihEkle">
                    @Html.HiddenFor(x => x.FirstOrDefault().UlkeTercihId)
                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                    <div class="form-row">
                        <div class="col-md-12">
                            <div class="form-group">
                                @if (ViewBag.Dereceler != null && ViewBag.Dereceler.Count > 0)
                                {
                                    <label asp-for="FirstOrDefault().DereceId" class="small mb-1 font-weight-bold">Derece</label>
                                    @Html.DropDownListFor(u => u.FirstOrDefault().DereceId, new SelectList(ViewBag.Dereceler,
                                             "DereceId", "DereceAdi"), "Dereceyi seçiniz", new { @id = "DereceListesi", @class = "form-control-range form-control py-0" })
                                    <span class="text-danger" asp-validation-for="FirstOrDefault().DereceId"></span>
                                }
                                else
                                {
                                    <select class="form-control-range form-control py-2" aria-label="Default select example">
                                        <option selected class="text-left">Seçim yapınız</option>
                                    </select>
                                }
                            </div>
                            <div class="form-group">
                                <label asp-for="FirstOrDefault().MulakatId" class="small mb-1 font-weight-bold">Mülakatı Seç</label>
                                @Html.DropDownListFor(u => u.FirstOrDefault().MulakatId, new SelectList(ViewBag.Mulakatlar,
                                         "MulakatId", "MulakatAdi"), "Mülakatı Seç", new { @id = "MulakatListesi", @class = "form-control-range form-control py-0" })
                                <span class="text-danger" asp-validation-for="FirstOrDefault().MulakatId"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="FirstOrDefault().UlkeTercihAdi" class="small mb-1 font-weight-bold">Ülke Grubu</label>
                                <input asp-for="FirstOrDefault().UlkeTercihAdi" type="text" class="form-control py-2" id="UlkeTercihAdi" placeholder="Ülke grubunu yazınız">
                                <span class="text-danger" asp-validation-for="FirstOrDefault().UlkeTercihAdi"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="FirstOrDefault().UlkeTercihSiraNo" class="small mb-1 font-weight-bold">Ülke Grubu Sıra No</label>
                                <input asp-for="FirstOrDefault().UlkeTercihSiraNo" type="number" class="form-control py-2" min="1" id="UlkeTercihSiraNo">
                                <span class="text-danger" asp-validation-for="FirstOrDefault().UlkeTercihSiraNo"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="FirstOrDefault().YabancıDil" class="small mb-1 font-weight-bold">Yabancı Dil</label>
                                <select asp-for="FirstOrDefault().YabancıDil" class="form-control-range form-control py-2" aria-label="Default select example" id="YabancıDil">
                                    <option selected class="text-left">Seçim yapınız</option>
                                    <option asp-for="FirstOrDefault().YabancıDil" value="Dil Belgesi İstenmeyecektir">Dil Belgesi İstenmeyecektir</option>
                                    <option asp-for="FirstOrDefault().YabancıDil" value="Almanca">Almanca</option>
                                    <option asp-for="FirstOrDefault().YabancıDil" value="Fransızca">Fransızca</option>
                                    <option asp-for="FirstOrDefault().YabancıDil" value="İngilizce">İngilizce</option>
                                </select>
                                <span class="text-danger" asp-validation-for="FirstOrDefault().YabancıDil"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-12">
                            <input type="submit" value="Kaydet" class="btn btn-success btn-sm text-white mb-1" style="width:100px" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="card mb-3">
            <div class="card-header">
                <i class="fas fa-file-excel mr-1"></i>
                <b>Excel'den Branş Yükleme</b>
            </div>
            <div class="card-body">
                <form id="uploadForm" enctype="multipart/form-data" asp-action="ExceldenBransYukle" method="post">
                    <div class="form-group">
                        <label class="small mb-1 font-weight-bold">Excel Dosyası Seçin</label>
                        <input type="file" id="fileInput" name="file" accept=".xlsx" class="form-control-file" />
                    </div>
                    <button type="submit" class="btn btn-success btn-sm">Excel'den Yükle</button>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-8">
        @await Component.InvokeAsync("UlkeTercihleri")
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script type="text/javascript">
        $("#DereceListesi").on("change", function () {
            var DereceId = $("#DereceListesi").val();
            $("#MulakatListesi").empty();
            $("#MulakatListesi").append("<option value=''> Mülakatı seçiniz </option>");
            var url = '@Url.Action("MulakatAdGetir", "UlkeTercihleri")?dereceId=' + DereceId;
            $.getJSON(url, function (data) {
                $.each(data, function (i = 0, mulakatId, mulakatAdi) {
                    $('#MulakatListesi').append($('<option>', {
                        value: data[i]['mulakatId'],
                        text: data[i]['mulakatAdi']
                    }));
                });
            });
            $('#MulakatListesi').focus();
        });
    </script>
}